import matplotlib.pyplot as plt
import random
import time

from MergeSort import mergesort
from InsertionSort import insertionSort


def plotfunction():
    sample_size = 1
    x, y1, y2 = [], [], []
    
    n = 1000
    for n in range(n, n*11 , n):
        A = random.sample(range(n), n)
        
        A = insertionSort(A)
        start_time = time.time()
        sorted_A = insertionSort(A)
        end_time = time.time()
        x.append(n)
        y1.append(end_time - start_time)
        
        A = mergesort(A)
        start_time = time.time()
        sorted_A = mergesort(A)
        end_time = time.time()
        y2.append(end_time - start_time)
        
        plt.plot(x, y1, x, y2)
        plt.xlabel("Size(N)", color = "blue")
        plt.ylabel("Execution Time(t)in ms", color = "blue")
        plt.show()
        
if __name__ == "__main__":
    plotfunction()
        
